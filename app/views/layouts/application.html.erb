  <body style="height:100%;">
    

<div class="container -fluid">

  <div class=" navbar justify-content-end bg-danger">
    <div class="container-fluid ">
     <span class="navbar-brand mb-0 h1">
     <%= image_tag('logo', style: 'height: 90px;') %> Ruby Pet Shop</span>
     
        

     
    </div>
