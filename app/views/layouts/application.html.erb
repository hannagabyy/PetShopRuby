          </br>
          <hr>
        <ul class="list-group">
        <lu class="list-group-item btn btn-danger m-3 p-3 sem-link"><i class="fa-solid fa-house "></i><%= link_to " HOME ",home_index_path %></lu>
  
         <lu class="list-group-item btn btn-danger m-3 p-3 sem-link "><i class="fa-solid fa-users"></i><%= link_to " CLIENTES ",new_pet_path %></lu>
  
